{% import '@dcla/icons/icons.twig' as icons %}
{{ attach_library('dcla/card') }}

<article class="card {{ classes|default('') }}">
  {%
    include '@dcla/eyebrow/eyebrow.twig' with {
      'eyebrow': eyebrow,
      'classes': 'card__eyebrow',
    } only
  %}

  <span class="card__icon">
    {{ icons.get(icon, 'card__icon--item') }}
  </span>
  <h3 class="card__title">{{ title }}</h3>
  <p class="card__body">{{ body }}</p>
  <p class="card__more">
    <a class="card__more--link" href="{{ more.url }}">{{ more.text }}</a>
  </p>
</article>
